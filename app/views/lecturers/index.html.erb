<p id="notice"><%= notice %></p>

<h1>Listing Lecturers 궁금한 강사</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Pw</th>
      <th>Name</th>
      <th>Sex</th>
      <th>Age</th>
      <th>Career</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Region</th>
      <th>Intro</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lecturers.each do |lecturer| %>
      <tr>
        <td><%= lecturer.lec_id %></td>
        <td><%= lecturer.pw %></td>
        <td><%= lecturer.name %></td>
        <td><%= lecturer.sex %></td>
        <td><%= lecturer.age %></td>
        <td><%= lecturer.career %></td>
        <td><%= lecturer.phone %></td>
        <td><%= lecturer.email %></td>
        <td><%= lecturer.region %></td>
        <td><%= lecturer.intro %></td>
        <td><%= link_to 'Show', lecturer %></td>
        <td><%= link_to 'Edit', edit_lecturer_path(lecturer) %></td>
        <td><%= button_to 'Destroy', lecturer, method: :delete, data: {confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '회원가입', new_lecturer_path %>
