<%= image_tag "intro.gif", alt: "궁금한강사 소개 영상", id: "intro_img" ,class: "intro_img" %>
<h3 class="title title--status">궁금한강사 현황</h3>
<div class="status">
    <div class="status__box status--lecture">
        <%= image_tag "강연.png" %>
        <p><span class="status--count"><%= @lecturer_count%></span>강사등록</p>
    </div>
    
    <div class="status__box status--lecturer">
        <%= image_tag "강사.png" %>
        <p><span class="status--count"><%= @lecture_count%></span>강연등록</p>
    </div>
    
    <div class="status__box status--review">
        <%= image_tag "리뷰.png" %>
        <p><span class="status--count"><%= @review_count%></span>리뷰등록</p>
    </div>
</div>

<div id="searchhide"></div>
<div id="searchdiv">
    <%= render 'searchlecturer' %>
</div>

<h1 id="popular" class="title--index">신규 강사</h1>  
    <div class="lecturers indexlec">
        <% @new_lecturers.each do |lecturer| %>
            <div class="lecturer__container recentlec__container">
                <div class="lec__image">
                    <% if lecturer.lec_img.blank? %>
                    <a href="<%= lecturer_path(lecturer.id) %>"><%= image_tag "basic_lecturer.JPG", class: "lecturer--profile" %></a>
                    <% else %>
                        <a href="<%= lecturer_path(lecturer.id) %>"><%= image_tag "#{lecturer.lec_img}", class: "lecturer--profile" %></a>
                    <% end %>    
                </div>
                <div class="lec__content">
                    <p class="lec__content--ct">
                        <% lecturer.lecturer_categories.each do |ct| %>
                            <%= ct.category %>
                        <% end %>
                    </p>
                    <h3 class="lec__content--name"><%= lecturer.name %></h3>
                    <p class="lec__content--intro"><%= lecturer.shortintro %></p>
                </div>
            </div>
        <% end %>
    </div>

